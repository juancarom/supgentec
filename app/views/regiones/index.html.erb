<h2>Listado de regiones</h2>

<table class="table table-striped">
  <tr>
    <th>Nombre</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @regiones.each do |region| %>
  <tr>
    <td><%= region.nombre %></td>
    <td><%= link_to 'ver', region, :class => "btn btn-small btn-secondary" %></td>
    <td><%= link_to 'editar', edit_region_path(region), :class => "btn btn-small btn-secondary"  %></td>
    <td><%= link_to 'eliminar', region, method: :delete, data: { confirm: 'Seguro desea eliminar?' } , :class => "btn btn-small btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Agregar Region', new_region_path, :class => "btn btn-small btn-success"  %>

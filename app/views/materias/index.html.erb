<h2>Listado de materias</h2>

<table class="table table-striped">
  <tr>
    <th>Nombre</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @materias.each do |materia| %>
  <tr>
    <td><%= materia.name %></td>
    <td><%= link_to 'ver', materia, :class => "btn btn-small btn-secondary" %></td>
    <td><%= link_to 'editar', edit_materia_path(materia), :class => "btn btn-small btn-secondary" %></td>
    <td><%= link_to 'eliminar', materia, method: :delete, data: { confirm: 'Seguro desea eliminar?' }, :class => "btn btn-small btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Agregar Materia', new_materia_path, :class => "btn btn-small btn-success" %>
